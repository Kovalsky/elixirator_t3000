<div
  class="grid grid-cols-[1fr_auto_auto] px-4 py-3 hover:bg-[#2a2a2a] transition duration-150 items-center"
  data-projects-target="row"
  data-action="click->projects#toggleTasks"
  data-projects-project-id-value="<%= project.id %>"
>
  <div class="text-[#d4d4d4] text-sm font-medium">
    <%= project.name %>
  </div>
  <div class="text-center text-[#9cdcfe] text-sm">
    <%= project.tasks.length %>
  </div>
</div>
<%= turbo_frame_tag "project-#{project.id}-tasks", loading: :lazy, src: tasks_project_path(project), class: "hidden" %>
